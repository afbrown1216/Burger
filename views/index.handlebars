<div class="jumbotron jumbotron-fluid">  
    <div class="container">
        <h1 class="display-4"> Burgers!</h1>
    </div>
</div>


<div class="container"> 
    <div class="row">

        <div class="col-sm">

            <h2> Burgers to be DEVOURED!</h2>

                <ul> 
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers/burger-block devoured=true}}
                        {{/unless}}
                    {{/each}}
                </ul>

        </div>

        <div class="col-sm"> 

            <h2> DEVOURED BURGER!!! HMMM GOOOD</h2>

                <ul> 
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burgers/burger-block devoured=false}}
                        {{/if}}
                    {{/each}}
                </ul>
                
        </div>
    </div>
    <div class="row">

        <h2> Add a delicious burger. </h2>
        <form class="create-form">

            <div class="form-group"> 
                <label for="ca"> Burger Name:</label>
                <input type="text" id="ca" name="name">
            </div>

            <div class="form-group">
                <label for="devoured">Devoured?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> EatMe
            </div>

            <button type="submit">Add Burger</button>
            
        </form>

    </div>
</div>







